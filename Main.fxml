<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox alignment="CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dijatou.CurrencyConverterController">
    <padding>
        <Insets top="5" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Currency Converter" style="-fx-font-size: 18px;"/>
    <Label text="Welcome!!! our application helps you convert from one currency to another. So let's get started" style="-fx-font-size: 12px;"/>
    
    <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter Amount" />

    <HBox alignment="CENTER" spacing="10">

        <Label text="From:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="fromCurrencyComboBox" promptText="Source Currency">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="USD" />
                    <String fx:value="EUR" />
                    <String fx:value="GBP" />
                    <String fx:value="GMD" />
                </FXCollections>
            </items>
        </ComboBox>
        <Label text="To:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="toCurrencyComboBox" promptText="Target Currency">

            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="USD" />
                    <String fx:value="EUR" />
                    <String fx:value="GBP" />
                    <String fx:value="GMD" />
                </FXCollections>
            </items>
        </ComboBox>

    </HBox>
    <Label fx:id="resultLabel" style="-fx-font-size: 16px;" text="0.00"/>
    <HBox alignment="CENTER" spacing="20">
        <Button text="Convert" onAction="#convert" />
        <Button text="Reset" onAction="#reset"/>
    </HBox>


    <Label text="We hope this helps!" style="-fx-font-size: 10px;"/>
    <Label text="Team epiccoders" style="-fx-font-size: 5px;"/>







   <!-- <Label text="Result:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
       <Label fx:id="resultLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>-->
</VBox>
