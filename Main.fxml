<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="CurrencyConverterController">
<padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
</padding>
<Label text="Currency Converter" style="-fx-font-size: 18px;"/>
<HBox alignment="CENTER" spacing="10">
    <TextField fx:id="amountInput" promptText="Enter amount" />
    <ComboBox fx:id="sourceCurrency" promptText="Source Currency">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="USD" />
                <String fx:value="EUR" />
                <String fx:value="GBP" />
                <String fx:value="GMD" />
            </FXCollections>
        </items>
    </ComboBox>
    <ComboBox fx:id="targetCurrency" promptText="Target Currency">

        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="USD" />
                <String fx:value="EUR" />
                <String fx:value="GBP" />
                <String fx:value="GMD" />
            </FXCollections>
        </items>
    </ComboBox>

</HBox>
<Label fx:id="resultLabel" style="-fx-font-size: 16px;" text="0.00"/>
<HBox alignment="CENTER" spacing="20">
    <Button text="Convert" onAction="#convert" />
    <Button text="Reset" onAction="#reset"/>
</HBox>
    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="From Currency:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="fromCurrencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="To Currency:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="toCurrencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Convert" onAction="#convert" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Result:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
<!--    <Label fx:id="resultLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>-->
</VBox>